set $domain 127.0.0.1;

server {
    listen [::]:80;
    listen 80;

    server_name $domain;

    # redirect http to https www
    return 301 https://$domain$request_uri;
}


server {
    listen [::]:443 ssl http2;
    listen 443 ssl http2;

    server_name $domain;
    root /var/www/html;
    location / {
        index  index.html index.htm;
    }
}